<div class="col-md-3 col-sm-6 col-12 px-2 mb-3 d-flex">
    <div class="card flex-grow-1">
        <div class="card-body">
            <h4 class="card-title"><a class="card-title-link" href="#(tag.URL)">#(tag.name)</a></h4>
            <p class="card-text">#(tag.newspapersCount) #if(tag.newspapersCount != 1):newspapers#else:newspaper#endif</p>
        </div>
    </div>
</div>
